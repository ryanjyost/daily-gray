<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
    <title>Here's the gray area</title>
</head>
<body class="container">

    <header>
        <% include ../partials/header %>
    </header>

    <main id="home-cont">

    <% for(post of sortedArray) { //loop through posts and grays %>

    <div class="feed-item">
        <!-- Display gray style -->
        <% if(post.blackImage && post.whiteImage) {%>

        <div id="top" class="row">
            <div id="black" class="col-sm-6">
                <img id="black-img" src=<%= post.blackImage %> alt="" />
                <h3><%= post.black %></h3>
            </div>
            <div id="white" class="col-sm-6">
                    <img id="white-img" src=<%= post.whiteImage %> alt="" />
                <h3><%= post.white %></h3>
            </div>
        </div>
        <a href=<%= "/gray/" + post.post_id  %>><h2><%= post.title %></h2></a>
        <span class="feed-author">By <%-post.author%></span>


        <%} else {%>
            <!-- Display regular post style -->
            <div id="top" class="row">
                    <div class="col-sm-12">
                       <img class="feed-post-img" src=<%= post.image %> alt="" />
                    </div>
            </div>

            <div class="row" id="gray-meta-cont">
                 <a href=<%= "/post/" + post.post_id  %>><h2><%= post.title %></h2></a>
            <span class="feed-author">By <%-post.author%></span>
            </div>

        <%}%>
    </div>




    <%}%>



    </main>

    <footer>
        <% include ../partials/footer %>
    </footer>

</body>
</html>